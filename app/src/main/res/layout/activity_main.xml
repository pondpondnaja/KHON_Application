<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Main_color_2"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Main_color_1"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/text_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/all_text_color"
                android:textAlignment="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/sp_text1" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycleview"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/Main_color_1"
                android:gravity="center"
                android:text="@string/main_s2"
                android:textAlignment="center"
                android:textColor="@color/all_text_color"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/news">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="1dp"
                    app:cardMaxElevation="2dp">

                    <RelativeLayout
                        android:id="@+id/ar_back_holder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ar_icon"
                            android:scaleType="fitXY"
                            android:elevation="3dp"
                            android:contentDescription="@string/menu4"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/img_card_1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="@string/menu4"
                            android:src="@drawable/ic_ar_white"
                            android:scaleType="fitXY"
                            android:elevation="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="1dp"
                    app:cardMaxElevation="2dp"
                    android:layout_below="@id/card_1">

                    <RelativeLayout
                        android:id="@+id/camera_holder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/camera_icon"
                            android:scaleType="fitXY"
                            android:elevation="3dp"
                            android:contentDescription="@string/menu4"
                            android:adjustViewBounds="true" />

                        <ImageView
                            android:id="@+id/img_card_2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="@string/menu4"
                            android:src="@drawable/ic_camera_alt_black_24dp"
                            android:scaleType="fitXY"
                            android:elevation="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/other_Services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/card_2"
                    android:layout_margin="6dp"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/os_1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp"
                        app:cardMaxElevation="2dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginEnd="3dp">

                        <ImageView
                            android:id="@+id/contact_us_icon"
                            android:contentDescription="@string/contact_us"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_mail_black_24dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/os_2"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp"
                        app:cardMaxElevation="2dp"
                        android:onClick="eventClick"
                        android:layout_marginBottom="6dp"
                        android:layout_marginStart="3dp">

                        <ImageView
                            android:id="@+id/event_list_icon"
                            android:contentDescription="@string/event_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_date_range_black_24dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <!--com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
